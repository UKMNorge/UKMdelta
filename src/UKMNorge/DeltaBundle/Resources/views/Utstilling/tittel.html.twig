{% extends "UKMDeltaBundle:Tittel:skjema.html.twig" %}
{% trans_default_domain translationDomain %}


{% block form_body %}
	<input type="hidden" name="innslagsnavn" value="{{ innslag.get('b_name') }}" />
	<input type="hidden" name="t_id" value="{{ tittel is defined and tittel.get('t_id') > 0 ? tittel.get('t_id') : 'new' }}" />


	<div class="form-group">
		<label>{{ 'tittel.tittel.label'|trans }}</label>
		<input type="text" required name="tittel" class="form-control" placeholder="{{ 'tittel.tittel.placeholder'|trans }}" value="{{ tittel is defined ? tittel.get('tittel') : '' }}" />
	</div>
	
	
	<div class="form-group">
		<label>{{ 'tittel.type.label'|trans }}</label>
		<input type="text" required name="type" class="form-control" placeholder="{{ 'tittel.type.placeholder'|trans }}" value="{{ tittel is defined ? tittel.get('type') : '' }}" />
		<p class="help">{{ 'tittel.type.forklaring'|trans }}</p>
	</div>
{% endblock form_body %}
