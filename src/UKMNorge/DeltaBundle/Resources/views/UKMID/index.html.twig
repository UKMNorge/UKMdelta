{% extends "UKMDeltaBundle::layout.html.twig" %}

{% block content %}
	<h1 class="center">Hei {{ user.getFirstName }}!</h1>
	
	<p>&nbsp;</p>
	
	<p class="lead center">
		Du er nå logget inn på din side.
		<br />
		Her velger du hva du skal delta med på UKM.
	</p>

	<div class="text-center" style="background-color: #85cdcf; color: white;">
  		<h1 class="page-header">Dine påmeldinger</h1>
	</div>

	<div>
		<!-- List opp påmeldinger eller si fra at det ikke finnes noen påmeldinger her -->
		{% if innslag is defined and innslag is not empty %}
			<span class="delta-input-header">Fullførte påmeldinger</span>
			<ul class="list list-unstyled list-group">
				{% for event in innslag %}
					{% if event.info.b_status == 8 %}
						<a href="{{ path('ukm_delta_ukmid_pamelding_innslag_oversikt', { k_id: event.info.b_kommune, pl_id: pl_id[loop.index-1], type: type[loop.index-1], b_id: event.info.b_id }) }}">
							<li class="list-group-item">{{ event.info.b_name }}</li>
						</a>
					{% endif %}
				{% endfor %}
			</ul>
			<span class="delta-input-header">Ikke fullførte påmeldinger</span>
			<ul class="list list-unstyled list-group">
				{% for event in innslag %}
					{% if event.info.b_status != 8 %}
						<a href="{{ path('ukm_delta_ukmid_pamelding_innslag_oversikt', { k_id: event.info.b_kommune, pl_id: pl_id[loop.index-1], type: type[loop.index-1], b_id: event.info.b_id }) }}"><li class="list-group-item alert alert-danger">{{ event.info.b_name }}</li></a>
					{% endif %}
				{% endfor %}
			</ul>
		{% else %}
			<p>Du har ingen påmeldinger enda.
			</p>
		{% endif %}
		
		<div class="row">
			<div class="col-xs-10 col-xs-offset-1">
				<form action="{{ path('ukm_delta_ukmid_checkinfo') }}">
					<button class="btn btn-block btn-delta" type="submit" value="Start ny påmelding" style=""/>Start ny påmelding</button>
				</form>	
			</div>
		</div>
	</div>
	
{% endblock %}