{% extends "UKMDeltaBundle::layout.html.twig" %}
{% trans_default_domain translationDomain %}
	
{% block content %}
	{# CONTENT #}
	<h1 class="center">{{ 'indexAction.hei'|trans({'%name': user.getFirstName} ) }}</h1>
	
	<p>&nbsp;</p>
	
	<p class="lead center">
		{{ 'indexAction.ledetekst'|trans|nl2br }}
	</p>

	<div class="text-center delta-header">
  		<h1 class="page-header">{{ 'indexAction.pameldinger.overskrift'|trans }}</h1>
	</div>

	<div class="delta-input-header"> 
		<!-- List opp påmeldinger eller si fra at det ikke finnes noen påmeldinger her -->
		{% if innslag is defined and innslag is not empty %}
			<span class="delta-fat">{{ 'indexAction.pameldinger.fullforte'|trans }}</span>
			<ul class="list list-unstyled list-group">
				{% for event in innslag %}
					{% if event.get('b_status') == 8 %}
						<a href="{{ path('ukm_delta_ukmid_pamelding_innslag_oversikt', { k_id: event.get('b_kommune'), pl_id: pl_id[loop.index-1], type: type[loop.index-1], b_id: event.get('b_id') }) }}">
							<li class="list-group-item">
								<div class="row">
									<div class="col-xs-6">
										{{ event.get('b_name') }}
									</div>
									<div class="col-xs-3 text-right">
										{{ event.get('kategori')|capitalize }}
									</div>
									<div class="col-xs-3">
										{{ frist[loop.index-1] ? 'indexAction.rediger'|trans : 'indexAction.last'|trans }}
									</div>
								</div>
							</li>
						</a>
					{% endif %}
				{% endfor %}
			</ul>
			<span class="delta-fat">{{ 'indexAction.pameldinger.ikkefullforte'|trans }}</span>
			<ul class="list list-unstyled list-group">
				{% for event in innslag %}
					{% if event.get('b_status') != 8 %}
						<a href="{{ path('ukm_delta_ukmid_pamelding_innslag_oversikt', { k_id: event.get('b_kommune'), pl_id: pl_id[loop.index-1], type: type[loop.index-1], b_id: event.get('b_id') }) }}">
							<li class="list-group-item">
								<div class="row">
									<div class="col-xs-6">
										{{ event.get('b_name') }}
									</div>
									<div class="col-xs-3 text-right">
										{{ event.get('kategori')|capitalize }}
									</div>
									<div class="col-xs-3">
										{{ frist[loop.index-1] ? 'indexAction.rediger'|trans : 'indexAction.last'|trans }}
									</div>
								</div>
							</li></a>
					{% endif %}
				{% endfor %}
			</ul>
		{% else %}
			<p>{{ 'indexAction.pameldinger.ingen'|trans }}
			</p>
		{% endif %}
		
		<div class="row">
			<div class="col-xs-10 col-xs-offset-1">
				<form action="{{ path('ukm_delta_ukmid_checkinfo') }}">
					<button class="btn btn-block btn-success" type="submit" value="{{ 'indexAction.pameldinger.startny'|trans }}" style=""/>{{ 'indexAction.pameldinger.startny'|trans }}</button>
				</form>	
			</div>
		</div>
	</div>
	
{% endblock %}