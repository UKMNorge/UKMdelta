{% extends "UKMDeltaBundle::layout.html.twig" %}

{% block content %}
	<h1 class="center">Hei {{ user.getFirstName }}!</h1>
	
	<p>&nbsp;</p>
	
	<p class="lead center">
		Du er nå logget inn på din side.
		<br />
		Her velger du hva du skal delta med på UKM.
	</p>

	<div class="text-center" style="background-color: #85cdcf; color: white;">
  		<h1 class="page-header">Dine påmeldinger</h1>
	</div>
	<div>
		<!-- List opp påmeldinger eller si fra at det ikke finnes noen påmeldinger her -->
		{% if innslag is defined %}
			<ul>
				{% for event in innslag %}
					<li>{{ innslag.tittel }}</li>
				{% endfor %}
			</ul>
		{% else %}
			<p>Du har ingen påmeldinger enda.
			</p>
		{% endif %}
		
		<div class="row">
			<div class="col-xs-10 col-xs-offset-1">
				<form action="{{ path('ukm_delta_ukmid_checkinfo') }}">
					<button class="btn btn-block btn-delta" type="submit" value="Start påmelding" style=""/>Start påmelding</button>
				</form>	
			</div>
		</div>
	</div>
{% endblock %}