{% extends "UKMDeltaBundle::layout.html.twig" %}
{% trans_default_domain translationDomain %}

{% block scripts %}
	{{ parent() }}
	{% javascripts 
		'@UKMDeltaBundle/Resources/public/js/poststed.js' %}
    	<script src="{{ asset_url }}"></script> 
	{% endjavascripts %}
{% endblock %}

{% block content %}
	<p class="lead center">
		{{ 'checkInfoAction.topptekst'|trans }}
	</p>
	<form class="" method="POST" action="{{ path('ukm_delta_ukmid_verifyInfo') }}">
		<div class="form-group">
			<div class="row">
				<div class="col-xs-12 delta-input-header">
					<small>{{ 'checkInfoAction.adresse'|trans }}</small>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">
					<input type="text" required name="address" class="form-control" placeholder="" value="{{ user.getAddress() is defined ? user.getAddress() : '' }}">
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 delta-input-header">
					<small>{{ 'checkInfoAction.postnummer'|trans }}</small>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">
					<input type="text" required id="postNumber" name="postNumber" class="form-control" placeholder="" value="{{ user.getPostNumber() is defined ? user.getPostNumber() : '' }}">
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 delta-input-header">
					<small>{{ 'checkInfoAction.poststed'|trans }}</small>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">
					<input type="text" required id="postPlace" name="postplace" class="form-control" placeholder="" value="{{ user.getPostPlace() is defined ? user.getPostPlace() : '' }}"> 
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 delta-input-header">
					<small>{{ 'checkInfoAction.alder'|trans }}</small>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">
					<select name="age" required class="form-control">
						<option value="" {{ (age is defined) and (age < 25) and (age > 9) ? '' : 'selected' }} disabled>{{ 'checkInfoAction.alderVelger.Label'|trans }}</option> 
						{% for i in 10..25 %}
							<option value="{{ i }}" {{ (age is defined) and (age == i) ? 'selected' : '' }}>{{ i }} {{ 'checkInfoAction.alderVelger.aar'|trans }}</option> 
						{% endfor %}
							<option value="0">{{ 'checkInfoAction.alderVelger.gammel'|trans }}</option>
					</select>
				</div>
			</div>
			<br />
			<div class="alert alert-warning center">
				{{ 'checkInfoAction.filmfoto.samtykke'|trans|nl2br }}
			</div> 
			<div class="row">
				<div class="col-xs-12">
					<button type="submit" class="btn btn-success btn-block center">{{ 'checkInfoAction.nesteLabel'|trans }}</button>
				</div>
			</div>
		</div>
	</form>

{% endblock %}