{% extends "UKMDeltaBundle::layout.html.twig" %}
{% trans_default_domain translationDomain %}

{% block scripts %}
	{{ parent() }}
	{% javascripts 
		'@UKMDeltaBundle/Resources/public/js/innslag.js'
		'@UKMDeltaBundle/Resources/public/js/videresend.js' %}
    	<script src="{{ asset_url }}"></script> 
	{% endjavascripts %}
{% endblock %}

{% block content %}
	{% for type, messages in app.session.flashBag.all %}
		{% for message in messages %}
			{% if type == 'danger' %}
				<div class="alert alert-danger">{{ message|trans }}</div>
			{% elseif type == 'success' %}
				<div class="alert alert-success">{{ message|trans }}</div>
			{% elseif type == 'warning' %}
				<div class="alert alert-warning">{{ message|trans }}</div>
			{% endif %}
		{% endfor %}
	{% endfor %}
	<form class="form-group delta-form" id="mainform" method="POST" action="{{ path('ukm_delta_ukmid_pamelding_lagre', { k_id: k_id, pl_id: pl_id, type: type, b_id: b_id }) }}">
		<input type="hidden" name="path" id="deltapath" value="">
		<div class="row">
			<div class="col-xs-12 delta-input-header">
				{% if hvem is defined %}
					<small>{{ 'overviewAction.artistnavn.'~hvem~'.label'|trans }}</small>
				{% else %}
					<small>{{ 'overviewAction.artistnavn.sammen.label'|trans }}</small>
				{% endif %}
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				{% if hvem is defined %}
					<input type="text" name="navn" class="form-control" placeholder="{{ 'overviewAction.artistnavn.'~hvem~'.placeholder'|trans }}, {{ user.getFirstName() }} {{ user.getLastName() }}..." value="{{ name is defined ? name : '' }}"> 
				{% else %}
					<input type="text" name="navn" class="form-control" placeholder="{{ 'overviewAction.artistnavn.sammen.placeholder'|trans }}, {{ user.getFirstName() }} {{ user.getLastName() }}..." value="{{ name is defined ? name : '' }}"> 
				{% endif %}
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 delta-input-header">
				{% if hvem is defined %}
					<small>{{ 'overviewAction.beskrivelse.'~hvem~'.label'|trans }}</small>
				{% else %}
					<small>{{ 'overviewAction.beskrivelse.sammen.label'|trans }}</small>
				{% endif %}
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				{% if hvem is defined %}
					<textarea name="beskrivelse" rows="3" class="form-control" placeholder="{{ 'overviewAction.beskrivelse.'~hvem~'.placeholder'|trans }}">{{ beskrivelse }}</textarea>
				{% else %}
					<textarea name="beskrivelse" rows="3" class="form-control" placeholder="{{ 'overviewAction.beskrivelse.sammen.placeholder'|trans }}">{{ beskrivelse }}</textarea>
				{% endif %}
				
			</div>
		</div>
		<br>
		{# PERSONER #}
		{% include 'UKMDeltaBundle:Innslag:personer.html.twig' %} 
		<p>&nbsp;</p>
		
		{# TITLER #}
		{% include 'UKMDeltaBundle:Musikk:titler.html.twig' %}
		<p>&nbsp;</p>

		{# TEKNISKE BEHOV #}
		{% include 'UKMDeltaBundle:Innslag:tekniskebehov.html.twig' %}
		<p>&nbsp;</p>

		<div class="row">
			<a href="">
				<div class="col-xs-12">
					<button type="submit" class="btn btn-block btn-delta">{{ 'overviewAction.lagre'|trans }}</button>
				</div>
			</a>
		</div>
	</form>

{% endblock %}
