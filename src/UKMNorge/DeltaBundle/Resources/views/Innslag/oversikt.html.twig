{% extends "UKMDeltaBundle::layout.html.twig" %}
{% trans_default_domain translationDomain %}

{% block scripts %}
	{{ parent() }}
	{% javascripts 
		'@UKMDeltaBundle/Resources/public/js/innslag.js'
		'@UKMDeltaBundle/Resources/public/js/videresend.js' %}
    	<script src="{{ asset_url }}"></script> 
	{% endjavascripts %}
{% endblock %}

{% block content %}
	<form class="form-group delta-form" id="mainform" method="POST" action="{{ path('ukm_delta_ukmid_pamelding_lagre', { k_id: k_id, pl_id: pl_id, type: type, b_id: b_id }) }}">
		<input type="hidden" name="path" id="deltapath" value="">
		<div class="row">
			<div class="col-xs-12 delta-input-header">
				<small>{{ ('overviewAction.artistnavn.' ~ ( hvem is defined ? hvem : 'kontakt' ) ~ '.label')|trans }}</small>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<input type="text" required name="navn" class="form-control" placeholder="{{ ('overviewAction.artistnavn.' ~ ( hvem is defined ? hvem : 'kontakt' ) ~ '.placeholder')|trans }}, {{ user.getFirstName() }} {{ user.getLastName() }}..." value="{{ name is defined ? name : '' }}"> 
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 delta-input-header">
				<small>{{ ('overviewAction.beskrivelse.' ~ ( hvem is defined ? hvem : 'kontakt' ) ~ '.label')|trans }}</small>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<textarea name="beskrivelse" rows="3" class="form-control" placeholder="{{ ('overviewAction.beskrivelse.' ~ ( hvem is defined ? hvem : 'kontakt' ) ~ '.placeholder')|trans  }}">{{ beskrivelse }}</textarea>				
			</div>
		</div>
		<br>
		{# PERSONER #}
		{% include 'UKMDeltaBundle:Innslag:personer.html.twig' %} 
		<p>&nbsp;</p>
		
		{# TITLER #}
		{% include 'UKMDeltaBundle:Musikk:titler.html.twig' %}
		<p>&nbsp;</p>

		{# TEKNISKE BEHOV #}
		{% include 'UKMDeltaBundle:Innslag:tekniskebehov.html.twig' %}
		<p>&nbsp;</p>

		<div class="row">
			<div class="col-xs-12">
				<button type="submit" class="btn btn-block btn-delta">{{ 'overviewAction.lagre'|trans }}</button>
			</div>
		</div>
	</form>

{% endblock %}
