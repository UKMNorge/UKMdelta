{% extends "UKMDeltaBundle::layout.html.twig" %}
{% trans_default_domain translationDomain %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="mt-0">{{ 'technicalAction.overskrift'|trans({}, 'base') }}</h1>
				
				<p>
					{{ 'technicalAction.forklaring'|trans({}, 'base')|nl2br }}
				</p>
				<p>
					{{ 'technicalAction.eksempler'|trans|nl2br }}
				</p>

				<form method="POST" action="{{ path('ukm_delta_ukmid_pamelding_innslag_lagre_teknisk', { k_id: k_id, pl_id: pl_id, type: type, b_id: b_id}) }}">
					<textarea rows="8" required class="form-control" name="teknisk" placeholder="{{ 'technicalAction.placeholder_teknisk'|trans }}">{{ teknisk is defined ? teknisk : '' }}</textarea>
					
					<p class="my-3">
						<button type="submit" class="btn btn-block btn-outline-primary btn-success">
							{{ 'technicalAction.lagreknapp'|trans({}, 'base') }}
						</button>
					</p>
					
					<p class="mt-3 center">
						<a href="{{ path('ukm_delta_ukmid_pamelding_innslag_oversikt', { k_id: k_id, pl_id: pl_id, type: type, b_id: b_id }) }}">
							{{ 'technicalAction.avbryt'|trans({}, 'base') }}
						</a>
					</p>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
