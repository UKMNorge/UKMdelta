{% trans_default_domain translationDomain %}
<div class="row">
	<a href="{{ path('ukm_delta_ukmid_pamelding_innslag_teknisk', { k_id: k_id, pl_id: pl_id, type: type, b_id: b_id }) }}">
		<div class="col-xs-12 delta-input-header">
			<span>{{ 'overviewAction.tekniske.overskrift'|trans }}</span>{% if teknisk|length > 0 %}<small class="right edit">{{ 'overviewAction.tekniske.endre'|trans }}</small>{% endif %}
		</div>
		<hr />
		<div class="summary col-xs-12 delta-list"> 
			<span>
			{% if teknisk|length > 0 %}
				{{ teknisk }}
			{% else %}
				{{ 'overviewAction.tekniske.ingen'|trans }} <a href="{{ path('ukm_delta_ukmid_pamelding_innslag_teknisk', { k_id: k_id, pl_id: pl_id, type: type, b_id: b_id }) }}">{{ 'overviewAction.tekniske.legg_til'|trans }}</a>
			{% endif %}
			</span>
		</div>
	</a>
	{% if teknisk|length == 0 %}
		<p>&nbsp;</p>
		<div class="col-xs-12">
			<a type="button" class="btn btn-block btn-delta" href="{{ path('ukm_delta_ukmid_pamelding_innslag_teknisk', { k_id: k_id, pl_id: pl_id, type: type, b_id: b_id }) }}">{{ 'overviewAction.tekniske.legg_til'|trans }}</a>
		</div>
	{% endif %}
</div>