{% extends "UKMDeltaBundle::layout.html.twig" %}
{% trans_default_domain translationDomain %}

{% block content %}
	<h1 class="center">
		Nesten ferdig!
	</h1>
	<div class="row">
		{% if status != status_real and status_real == 8 %}
			<div class="alert alert-warning col-xs-10 col-xs-offset-1">
				{{ 'statusAction.obs-men-ok-topptekst'|trans({'%innslag': innslag.get('b_name')}) }}
			</div>		
		{% else %}
			<div class="alert alert-danger col-xs-10 col-xs-offset-1">
				{{ 'statusAction.obs-topptekst'|trans({'%innslag': innslag.get('b_name')}) }}
			</div>
		{% endif %}
	</div>
	<p>&nbsp;</p>
	<div class="col-xs-12 delta-fat">
		<span class="">{{ 'statusAction.infotekst'|trans }}</span>
	
		<ul class="col-xs-12 list-unstyled">
			{# {% for tekst in grunner %}
				<li>- {{ ('statusAction.'~tekst)|trans }}</li>
			{% endfor %} #}
			{% for kategori, grunner_i_kategori in grunner %}
				{% if kategori == 'personer' %}
					{% for person in grunner_i_kategori %}
						- {{ person[0] }}:
						<ul>
							{% for arsak_person in person[1] %}
								<li>{{ ( 'mangler.' ~ arsak_person )|trans({}, 'base') }}</li>
							{% endfor %}
						</ul>
					{% endfor %}
				{% else %}
					{% for arsak in grunner_i_kategori %}
						<li>{{ ( 'mangler.' ~ arsak )|trans({}, 'base' ) }}</li>
					{% endfor %}
				{% endif %}
			{% endfor %}
		</ul>
	</div>
	<p>&nbsp;</p>
	<div class="col-xs-12">		
		<a type="button" class="btn btn-block btn-delta btn-success" href="{{ path('ukm_delta_ukmid_pamelding_innslag_oversikt', { k_id: k_id, pl_id: pl_id, type: type, b_id: b_id }) }}">{{ 'statusAction.tilbakeknapp'|trans({},'base') }}</a>
	</div>
	<p>&nbsp;</p>
	<div class="col-xs-12">
		<a type="button" class="btn btn-block btn-delta btn-primary" href="{{ path('ukm_delta_ukmid_homepage') }}">{{ 'statusAction.videreknapp'|trans({},'base') }}</a>
	</div>	

	<div class="">
		<span class="delta-subtext center">{{ 'statusAction.undertekst'|trans({},'base') }}</span>
		<span class="delta-subtext center text-danger">{{ 'statusAction.obstekst'|trans({ '%dag%': frist|date('l')|dato('l'), '%dato%': frist|date('d'), '%maned%': frist|date('F')|dato('F'), '%time%': frist|date('h'), '%minutt%': frist|date('i') }, 'base') }}</span> 
	</div>
{% endblock %} 