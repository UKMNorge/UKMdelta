{% trans_default_domain translationDomain %}

{# Lag en div som kan utvides ved å trykkes på #}
<div class="fellesmonstring">
	<div class="row fellesmonstring-header">
		<div class="col-8">
			<a href="#" onclick="return false;">{{ arrangement.getNavn() }}</a>
		</div>
		<div class="col-4 delta-input-header fellesmonstring-list">
			{% for kommune in arrangement.getKommuner().getAll() %}
				<small>{{ kommune.getNavn() }}</small><br />
			{% endfor %}
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="row fellesmonstring-chooser" style="padding-left: 10px; display:none;">
		<div class="col-12">
			<span>{{ 'geoAction.fellesmonstringLabel'|trans }}</span>
		</div> 
		<div class="col-12 center">
			{% for kommune in arrangement.getKommuner().getAll() %}
				{% if app.environment == 'test' and fylke_id != 21 %}
				<a class="btn btn-block btn-outline-primary" href="javascript:alert('Ikke tilgjengelig i testsystemet. Velg testkommune 1, 2 eller 3');">
				{% else %}
				<a class="btn btn-block btn-outline-primary" href="{{ path('ukm_delta_ukmid_pamelding_hva', { k_id: kommune.getId(), pl_id: arrangement.getId() }) }}"> 
				{% endif %}
					<div class="row">
						<div class="col-12">
							{{ kommune.getNavn() }} 
						</div>
					</div>
				</a>
			{% endfor %}
		</div>
	</div>
</div> {# .fellesmonstring #}
