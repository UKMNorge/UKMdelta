{% trans_default_domain translationDomain %}
<label>{{ 'overviewAction.personer.overskrift'|trans }}</label>

<ul class="list-group">
	{% for person in personer %}
		<li class="list-group-item click triggerLink">
			<div class="row">
				<div class="col-2 px-0">
					<div class="overunder">
						<div class="over">{{ person.age is defined ? person.age : '?' }} år</div>
						<div class="under">{{ person.age is defined ? 'person.alder.ar'|trans({ "year": "now"|date("Y") - person.age }, 'base') : 'år' }}</div>
					</div>
				</div>
				<div class="col-7">
					<p style="line-height:1em">
						{{ person.p_firstname is defined ? person.p_firstname : '' }} {{ person.p_lastname is defined ? person.p_lastname : '' }}
						<br />
						<small>
							{% if (person.instrument is defined) and not ( person.instrument is empty) %}
								{{ person.instrument }}
							{% else %}
								<span class="badge badge-danger">{{ 'person.rolle.ukjent'|trans }}</span>
							{% endif %}
						</small>
					</p>
				</div>
				<div class="col-3">
					<a href="{{ path('ukm_delta_ukmid_pamelding_personinfo', { k_id: k_id, pl_id: pl_id, type: type, b_id: b_id, p_id: person.p_id } ) }}" id="editP{{ person.p_id }}" class="actionLink btn btn-sm btn-outline-primary autoshrink">{{ 'person.rediger'|trans({},'base') }}</a>
				</div>
			</div>
		</li>
	{% else %}
		<li class="list-group-item">{{ 'overviewAction.personer.ingen'|trans }}</h3>
	{% endfor %}
	<li class="list-group-item">
		<a href="{{ path('ukm_delta_ukmid_pamelding_ny_person', {k_id: k_id, pl_id: pl_id, type: type, b_id: b_id }) }}" class="btn btn-block btn-outline-secondary btn-sm">{{ 'overviewAction.personer.legg_til'|trans }}</a>
	</li>
</ul>