{% extends "UKMDeltaBundle::layout.html.twig" %}
{% trans_default_domain translationDomain %}

{% block delta_content %}
	<div class="container">
		<div class="row paamelding-box big-box" style="text-align: center">
			<div class="col-12">
				{% if innslag.getMangler().getAntall() < 1 %}
					<div style="text-align: center; margin-bottom: 20px;">
						<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 25 25" style="fill: #FF118A;transform: ;msFilter:;"><path d="M18 8.31c-.36-.41-.73-.82-1.12-1.21l-.29-.27.14-.12a3.15 3.15 0 0 0 .9-3.49A3.91 3.91 0 0 0 14 1v2a2 2 0 0 1 1.76 1c.17.4 0 .84-.47 1.31-.07.08-.15.13-.22.2-3-2.41-6.29-3.77-7.9-2.16a2.16 2.16 0 0 0-.41.59v.1l-.18.53-4.41 13.1A3.28 3.28 0 0 0 5.28 22a3.21 3.21 0 0 0 1-.17L20 17.28a1 1 0 0 0 .43-.31l.21-.18c1.43-1.44.51-4.21-1.41-6.9A6.63 6.63 0 0 1 23 9V7a8.44 8.44 0 0 0-5 1.31zM5.7 19.93a1.29 1.29 0 0 1-1.63-1.63l1.36-4.1a10.7 10.7 0 0 0 4.29 4.39zm7-2.33a8.87 8.87 0 0 1-6.3-6.29l1-3 .06.09c.11.22.25.45.39.68s.16.29.26.44.33.48.51.73.19.28.3.42.43.55.66.82l.29.35c.34.39.7.77 1.08 1.16s.68.64 1 1l.33.28.78.63.37.28c.28.2.55.4.83.58l.31.2c.36.22.72.43 1.07.61h.05zm6.51-2.23h-.06c-.69.38-3.56-.57-6.79-3.81-.34-.34-.66-.67-.95-1l-.29-.35-.53-.64-.29-.4c-.13-.19-.27-.37-.39-.55l-.26-.42-.29-.47c-.08-.14-.14-.27-.21-.4s-.15-.26-.21-.4a3.31 3.31 0 0 1-.14-.36c-.05-.13-.11-.26-.15-.38S8.6 6 8.57 5.88s-.05-.22-.07-.32a2.26 2.26 0 0 1 0-.26 1 1 0 0 1 0-.24l.11-.31c.36-.36 2.23 0 4.73 1.9A4.13 4.13 0 0 1 12 7v2a6.45 6.45 0 0 0 3-.94l.48.46c.42.42.81.85 1.18 1.28a5.32 5.32 0 0 0-.6 3.4l2-.39a3.57 3.57 0 0 1 0-1.12 11.3 11.3 0 0 1 .81 1.45c.56 1.32.52 2.06.34 2.23z"></path></svg>
					</div>
				{% endif %}
				
				<h1 class="mt-0">
					{{ 'attendingAction.overskrift'|trans }}
					{% if innslag.getMangler().getAntall() > 0 %}
						{{ 'attendingAction.overskrift_men'|trans }}
					{% endif %}
				</h1>
				<p>
					UKM
					{{ arrangement.getNavn() }}
					{{ 'attendingAction.monstringstarter'|trans({ '%dato%': arrangement.getStart()|dato('l d.F \\k\\l. H:i')}) }}
				</p>
			</div>
			
			<div class="col-12">
				{% if innslag.getMangler().getAntall() > 0 %}
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" style="fill: #d73131; vertical-align: bottom; transform: ;msFilter:;"><path d="M11.001 10h2v5h-2zM11 16h2v2h-2z"></path><path d="M13.768 4.2C13.42 3.545 12.742 3.138 12 3.138s-1.42.407-1.768 1.063L2.894 18.064a1.986 1.986 0 0 0 .054 1.968A1.984 1.984 0 0 0 4.661 21h14.678c.708 0 1.349-.362 1.714-.968a1.989 1.989 0 0 0 .054-1.968L13.768 4.2zM4.661 19 12 5.137 19.344 19H4.661z"></path></svg>
					<label>{{ 'attendingAction.infotekst'|trans }}</label>
					<br/>
					{% include "UKMDeltaBundle:Innslag:mangler.html.twig" %}
                    <p>&nbsp;</p>
				{% endif %}

				<div class="fullfor-button-div">	
					<div class="button-div">
						<a class="round-style-button fullfor" href="{{ arrangement.getLink() }}pameldte/" target="_lokalside">
							{{ 'attendingAction.vispameldte'|trans }}
						</a>
					</div>
				</div>

				<div class="fullfor-button-div">	
					<div class="button-div">
						<a class="round-style-button fullfor" href="{{ arrangement.getLink() }}kontaktpersoner/" target="_lokalside">
							{{ 'attendingAction.viskontakt'|trans }}
						</a>
					</div>
				</div>
			</div>

			<p>&nbsp;</p>

			<div
				class="col-12">
				{# Hvis det ikke er noe Ã¥ redigere, ikke vis rediger-knappen #}
				{% if not ( innslag.getType().erEnkeltperson() and not innslag.getType().harBeskrivelse() and not innslag.getType().harFunksjoner() ) %}
					<div class="fullfor-button-div">	
						<div class="button-div">
							<a class="round-style-button fullfor" href="{{ path('ukm_delta_ukmid_pamelding_innslag_oversikt', { k_id: k_id, pl_id: pl_id, type: type, b_id: b_id }) }}">
								{{ 'attendingAction.rediger'|trans({'%innslaget': innslag.getNavn()|length < 20 ? innslag.getNavn() : 'innslaget'}) }}
							</a>
						</div>
					</div>

				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
