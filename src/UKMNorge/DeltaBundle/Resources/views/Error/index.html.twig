{% extends "UKMDeltaBundle::layout.html.twig" %}

{% block content %}	
	<h1 class="center">{{ overskrift is defined ? overskrift|trans({}, 'base') : 'feil.overskrift'|trans({}, 'base') }}</h1>
	<p class="lead center">{{ ledetekst is defined ? ledetekst|trans({}, 'base')|nl2br : '' }}
	</p>
	<p class="center">{{ tekst is defined ? tekst|trans({}, 'base') : '' }}</p>
	{% if cheese is defined %}
		<div class="col-xs-12 center">
			<img></img>
			<p>Out of cheese error! Divide by cucumber, reinstall universe and try again.</p>
		</div>
	{% endif %}
	{% if teknisk is defined %}
		<div class="col-xs-12 center">
			<p>{{ 'feil.teknisk.body'|trans({}, 'base') }}</p>
			<div class="panel panel-default">
				<div class="panel-heading">{{ 'feil.teknisk.overskrift'|trans({}, 'base') }}</div>
				<div class="panel-body">
					{{ teknisk.message }}<br>
					{{ 'feil.teknisk.ifil'|trans({}, 'base') }}
					{{ teknisk.file }} {{ 'feil.teknisk.linje'|trans({}, 'base') }} {{ teknisk.line }}
					<br>
					<br>
					
				</div>
			</div>
		</div>
	{% endif %}
	<div class="row">
		<div class="col-xs-12">
			{{ code is defined ? code : '' }}
		</div>
	</div>
	
	<a href="{{ path('ukm_delta_homepage') }}" class="btn btn-primary btn-block center">GÃ¥ til forsiden</a>
{% endblock %}