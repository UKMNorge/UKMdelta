{% extends "UKMDeltaBundle::layout.html.twig" %}

{% block delta_content%}	
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1>{{ overskrift is defined ? overskrift|trans({}, 'base') : 'feil.overskrift'|trans({}, 'base') }}</h1>
				<p>
					{{ ledetekst is defined ? ledetekst|trans({}, 'base')|nl2br : '' }}
				</p>
				<p>
					{{ tekst is defined ? tekst|trans({}, 'base') : '' }}
				</p>
				{% if teknisk is defined %}
					<p>
						{{ 'feil.teknisk.body'|trans({}, 'base') }}
					</p>
					<div class="panel panel-default">
						<div class="panel-heading">{{ 'feil.teknisk.overskrift'|trans({}, 'base') }}</div>
						<div class="panel-body">
							{{ teknisk.message }}
							<br />
							{{ 'feil.teknisk.ifil'|trans({}, 'base') }}
							{{ teknisk.file }} {{ 'feil.teknisk.linje'|trans({}, 'base') }} {{ teknisk.line }}		
						</div>
					</div>
				{% endif %}
				{# if frist is defined %}
					<p>
						{{ 'frist.link'|trans({}, 'base') }}
						<a href="//www.ukm.no/pl{{ pl_id }}/pameldte/">ukm.no/pl{{ pl_id }}/pameldte/</a> 
					</p>
				{% endif #}
				<p>
					{{ code is defined ? code : '' }}
				</p>
	
				<p>&nbsp;</p>
	
				<a href="{{ path('fos_user_security_logout') }}" class="btn btn-primary btn-block center">GÃ¥ til forsiden</a>
			</div>
		</div>
	</div>
{% endblock %}