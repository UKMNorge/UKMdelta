{% extends "UKMDeltaBundle:Tittel:skjema.html.twig" %}
{% trans_default_domain translationDomain %}

{% block form_body %}
	{{ parent() }}
	<div class="form-group">
		<label>{{ 'tittel.tekst.label'|trans({'%bestemt': type.getTekst('titler.bestemt')},'base') }}</label>
	</div>

    {# SANGTYPE #}
	<div class="form-group" id="tekst-valg">
		<label class="radio-inline">
			<input type="radio" name="sangtype" value="sang" {{ tittel is defined and not tittel.erInstrumental() ? 'checked' }} required />
			{{ 'tittel.tekst.tekst'|trans({},'base') }}
		</label>
		<label class="radio-inline">
			<input type="radio" name="sangtype" value="instrumental" {{ tittel is defined and tittel.erInstrumental() ? 'checked' }} required />
			{{ 'tittel.tekst.instrumental'|trans({},'base') }}
		</label>
	</div>

    {# SELVLAGET #}
	<div class="form-group">
		<label>{{ 'tittel.selvlaget.label'|trans({'%bestemt': type.getTekst('titler.bestemt')},'base') }}</label>
	</div>
	<div class="form-group" id="melodi-valg">
		<label class="radio-inline">
			<input type="radio" name="selvlaget" value="1" {{ tittel is defined and tittel.erSelvlaget() ? 'checked' }} required />{{ 'ja'|trans({}, 'base') }}
		</label>
		<label class="radio-inline">
			<input type="radio" name="selvlaget" value="0" {{ tittel is defined and not tittel.erSelvlaget() ? 'checked' }} required />{{ 'nei'|trans({}, 'base') }}
		</label>
	</div>
	
    {# TEKST AV #}
	<div class="form-group" id="tekst-rad">
		<label>{{ 'tittel.tekst_av.label'|trans }}</label>
		<input type="text" name="tekstforfatter" class="form-control" placeholder="{{ 'tittel.tekst_av.placeholder'|trans }}" value="{{ tittel is defined ? tittel.getTekstAv() }}" />
	</div>
	
    {# MELODI AV #}
	<div class="form-group" id="melodi-rad">
		<label>{{ 'tittel.melodi_av.label'|trans }}</label>
		<input type="text" name="melodiforfatter" class="form-control" placeholder="{{ 'tittel.melodi_av.placeholder'|trans }}" value="{{ tittel is defined ? tittel.getMelodiAv() }}" />
	</div>
{% endblock %}