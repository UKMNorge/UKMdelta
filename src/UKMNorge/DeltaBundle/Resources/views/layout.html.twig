{% extends "UKMDesignBundle::layout.html.twig" %}

{% block css %}
	{{ parent() }}
	{% stylesheets '@UKMDeltaBundle/Resources/public/less/*' filter='less' output='css/compiled-main.css' %}
	    <link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block content_pre %}
	{# DENNE TAR KUN ERRORS #}
	{#{% embed "UKMDesignBundle:FlashBag:list.html.twig" %}{% endembed %}} #}

	{# FLASHBAG	#}
	{% for type, messages in app.session.flashBag.all %}
		{% for message in messages %}
			{% if type == 'error' %}
				<div class="alert alert-danger">{{ message|trans }}</div>
			{% else %}	
				<div class="alert alert-{{ type }}">{{ message|trans }}</div>
			{% endif %}
		{% endfor %}
	{% endfor %}
{% endblock %}