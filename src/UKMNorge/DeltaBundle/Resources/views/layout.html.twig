{% extends "UKMDesignBundle::layout.html.twig" %}

{% block css %}
	{{ parent() }}
	{% stylesheets 
		'@UKMDesignBundle/Resources/public/less/systems/ukmdelta.less'
		'@UKMDeltaBundle/Resources/public/less/*'
		 filter='less' output='css/compiled-main.css' %}
	    <link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block content_pre %}
	{# DENNE TAR KUN ERRORS #}
	{#{% embed "UKMDesignBundle:FlashBag:list.html.twig" %}{% endembed %}} #}

	{# FLASHBAG	#}
	{% for type, messages in app.session.flashBag.all %}
		{% for message in messages %}
			<div class="alert alert-{{ type == 'error' ? 'danger' : type }}">{{ message|trans }}</div>
		{% endfor %}
	{% endfor %}
{% endblock %}