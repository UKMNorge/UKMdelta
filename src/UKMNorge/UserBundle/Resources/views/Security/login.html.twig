{% extends "UKMUserBundle::layout" ~ (renderWithoutLayout is defined and renderWithoutLayout == true ? '-without' : '') ~ ".html.twig" %}

{% block css %}
	{{ parent() }}
	<style>
.no-border-bottom-radius {
	border-bottom-left-radius:0;
	border-bottom-right-radius:0;
}
.no-border-top-radius {
	border-top-left-radius:0;
	border-top-right-radius:0;
}
</style>
{% endblock %}
{% block content %}
<div class="container">
	<div class="row">
		<div class="col-12">
			{% embed "UKMDeltaDesignBundle:FlashBag:list.html.twig" %}{% endembed %}

			{% if error and error.messageKey == 'Invalid credentials.' %}
				<div class="alert alert-danger">
					<h4>Feil mobilnummer / passord</h4>
					<p>
						Fant ingen bruker med det mobilnummeret og passordet. Har du glemt passordet?
						<br />
						<a href="{{ path('fos_user_resetting_request') }}">Klikk her for å få nytt passord</a>
					</p>
					<p>&nbsp;</p>
					<p>
						Hvis du ikke har en bruker, 
						<br />
						<a href="{{ path('fos_user_registration_register') }}">kan du opprette en UKM-bruker</a>
					</p>
				</div>
			{% elseif error %}
				<div class="alert alert-danger">
					<p>{{ error.messageKey|trans(error.messageData, 'FOSUserBundle') }}</p>
				</div>
			{% endif %}
		</div>
	</div>

	<div class="row">
		<div class="col-12 col-sm-6 col-md-7">
			<form action="{{ path("fos_user_security_check") }}" method="post">
				<input type="hidden" name="_rdirurl" value="{{ rdirurl is defined ? rdirurl : '' }}" />
				<input type="hidden" name="_rdirtoken" value="{{ rdirtoken is defined ? rdirtoken : '' }}" />
			    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    			<h2 class="my-2 d-none d-sm-block">Logg inn</h2>

				<p class="mt-3">
                    <a href="{{ facebookLoginURL }}" class="btn btn-block btn-outline-primary">Logg inn med facebook</a>
                </p>
				
                <p align="center" class="mt-1">
                    eller
                </p>
	
				<div class="form-group">    
					<div class="input-group">
						<span class="input-group-addon no-border-bottom-radius" style="border-bottom:none;"><i class="icon icon-phone"></i></span>
					    <input class="form-control input-lg no-border-bottom-radius" type="tel" id="username" name="_username" value="{{ last_username }}" placeholder="Mobilnummer" required="required" style="border-bottom: 0px;" />
					</div>
					<div class="input-group">    
						<span class="input-group-addon no-border-top-radius"><i class="icon icon-lock"></i></span>
					    <input class="form-control input-lg no-border-top-radius" type="password" id="password" name="_password" placeholder="Passord" required="required" />
					</div>
				</div>

			    <input class="btn btn-block btn-outline-primary" type="submit" id="_submit" name="_submit" value="Logg inn" />
			</form>
	
			<p align="right">
				<small><a href="{{ path('fos_user_resetting_request') }}" class="">Glemt passord?</a></small>
			</p>
			<div class="clearfix"></div>
		</div>	

		<div class="col-12 col-sm-6 col-md-5">
			
			<h2 class="my-2">Opprett bruker</h2>
		
			<p class="mt-3">
                <a href="{{ facebookLoginURL }}" class="btn btn-block btn-outline-primary autoshrink">Registrer deg med facebook</a>
            </p>

            <p>
                <a href="{{ url('fos_user_registration_register') }}" class="btn btn-block btn-outline-secondary autoshrink">Registrer deg uten facebook</a>
            </p>
        </div>
	</div>

    <div class="row">
		<div class="col-12 mt-3">
            <a href="//{{ UKM_HOSTNAME }}">Avbryt, tilbake til {{ UKM_HOSTNAME }}</a>
		</div>
	</div>
</div>
{% endblock %}