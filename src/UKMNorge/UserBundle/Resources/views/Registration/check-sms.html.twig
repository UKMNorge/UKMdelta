{% extends "UKMUserBundle::layout.html.twig" %}

{% block scripts %}
	{{ parent() }}
	{% javascripts 
		'@UKMUserBundle/Resources/public/js/waitAMinute.js' %}
    	<script src="{{ asset_url }}"></script> 
	{% endjavascripts %}
{% endblock %}

{% block content %}
	<form method="post" action="{{ path('ukm_user_registration_validate_sms') }}">
		<h1 class="center">Skriv inn kode</h1>
		
		{% embed "UKMDesignBundle:FlashBag:list.html.twig" %}{% endembed %}
		
		{% if sent_before %}
		<div class="alert alert-info">
			Vi sendte denne SMS'en for en stund siden. Sjekk meldingene dine, 
			eventuelt 
			<a href="{{ path('fos_user_resetting_request')}}" class="forcePageLoader">trykk her for å sende ny kode</a>
		</div>
		{% endif %}
		
		<p class="lead center">
			Vi har sendt en SMS-kode til <span class="bold">din mobil.</span>
			<br />
			Skriv inn denne i feltet nedenfor.
		</p>
		
		<div class="form-group">
			<label for="name">SMS-kode</label>
			<input value="" type="tel" class="form-control" id="smscode" name="smscode" placeholder="Skriv inn koden..." />
		</div>

		<small class="right"><a id ="no_sms_link" href="{{ path('ukm_user_registration_no_sms', { phone: phone }) }}">Ikke fått SMS? Klikk her. <span id="no_sms_all_text"> (Linken aktiveres om <span id="no_sms_text"></span> sekunder.)</span></a></small>
		<button type="submit" class="btn btn-success btn-block center forcePageLoader" name="submit">Neste</button>
	</form>
{% endblock %}