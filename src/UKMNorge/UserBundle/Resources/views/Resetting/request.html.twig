{% extends "UKMUserBundle::layout.html.twig" %}

{% block delta_content %}
	<div class="container">	
		<div class="row">
			<div class="col-12">
				<h1 class="mt-0">Glemt passord</h1>
	
				<p>Hvis du har glemt passordet, kan vi sende deg en SMS så du kan lage nytt passord</p>
				<p class="d-none d-sm-block">&nbsp;</p>
	
				<form action="{{ path('ukm_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
					{% if invalid_username is defined %}
						<div class="alert alert-danger">
							Klarte ikke å finne en bruker med det mobilnummeret!
						</div>
					{% endif %}
				
					<div class="form-group">
						<label for="username">Mobilnummer</label>
						<input class="form-control" type="text" id="username" maxlength="8" name="username" required="required" placeholder="Skriv ditt mobilnummer (bare tall)" value="{{ app.request.get('phone') }}" />
					</div>
				
					<div>
						<input class="btn btn-outline-primary btn-block" type="submit" value="Nullstill passord" />
					</div>
				</form>
				
				<p class="mt-5 center">
					<a href="{{ path('fos_user_security_login') }}">avbryt</a>
				</p>
			</div>
		</div>
	</div>
{% endblock delta_content %}
