{% extends "UKMDeltaBundle::layout.html.twig" %}
{% trans_default_domain 'base' %}

{% block content %}
	<div class="container">	
		<div class="row">
			<div class="col-12">
				<h1 class="center">{{ overskrift is defined ? overskrift|trans({}, 'fbconnect') : 'fbconnect.overskrift'|trans({}, 'fbconnect') }}</h1> 
				<p class="lead center">{{ system is defined ? ('fbconnect.systemet')|trans({}, 'fbconnect') : '' }}</p>
				
				<p>&nbsp;</p>
				<a href="{{ fbredirect }}" class="btn btn-block btn-outline-primary btn-large">{{ 'fbconnect.knappetekst'|trans({}, 'fbconnect') }}</a>
			</div>
		</div>
	</div>
{% endblock %} 