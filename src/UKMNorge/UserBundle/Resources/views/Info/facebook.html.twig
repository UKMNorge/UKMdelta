{% extends "UKMDeltaBundle::layout.html.twig" %}
{% trans_default_domain 'base' %}

{% block delta_content %}
	<div class="container">	
		<div class="row">
			<div class="col-12">
				<h1 class="mt-0">{{ overskrift is defined ? overskrift|trans({}, 'fbconnect') : 'fbconnect.overskrift'|trans({}, 'fbconnect') }}</h1> 
				<p class="lead">{{ system is defined ? ('fbconnect.systemet')|trans({}, 'fbconnect') : '' }}</p>
				
				<p class="mt-4">
					<a href="{{ fbredirect }}" class="btn btn-block btn-outline-primary btn-large">{{ 'fbconnect.knappetekst'|trans({}, 'fbconnect') }}</a>
				</p>
			</div>
		</div>
	</div>
{% endblock %} 